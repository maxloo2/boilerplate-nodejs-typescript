{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    // "noEmit": true,
    "skipLibCheck": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": "src",
    "outDir": "build",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
